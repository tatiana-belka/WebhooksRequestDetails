{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint"
    ],
    "overrides": [
        {
            "files": ["*.js", "*.ts", "*.tsx"],
            "rules": {
                "@typescript-eslint/no-inferrable-types": "off"
            }
        }
    ]
}